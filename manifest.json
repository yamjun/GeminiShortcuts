{
    "manifest_version": 3,
    "name": "Gemini Shortcuts",
    "version": "1.1",
    "description": "Google Geminiの操作を高速化するキーボードショートカットを追加します。",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://gemini.google.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://gemini.google.com/*"],
        "js": ["content.js"],
        "css": ["style.css"]
      }
    ],
    "commands": {
      "toggle-model": {
        "suggested_key": {
          "default": "Ctrl+Shift+M",
          "mac": "Command+Shift+M"
        },
        "description": "モデル (Pro/Flash) を切り替えます。"
      },
      "new-chat": {
        "suggested_key": {
          "default": "Ctrl+Shift+N",
          "mac": "Command+Shift+N"
        },
        "description": "新しいチャットを開始します。"
      },
      "show-search": {
        "suggested_key": {
          "default": "Ctrl+Shift+F",
          "mac": "Command+Shift+F"
        },
        "description": "チャット履歴の検索ウィンドウを開きます。"
      }
    },
    "action": {
      "default_title": "Gemini Shortcuts",
      "default_icon": "gemini-html/Google Gemini_files/unnamed.png"
    },
    "icons": {
      "16": "gemini-html/Google Gemini_files/unnamed.png",
      "48": "gemini-html/Google Gemini_files/unnamed.png",
      "128": "gemini-html/Google Gemini_files/unnamed.png"
    }
  }
  